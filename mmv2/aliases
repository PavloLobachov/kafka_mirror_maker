alias list="./kafka-topics.sh --zookeeper $Z --list"

alias describe="./kafka-topics.sh --zookeeper $Z --describe --topic "

alias create="./kafka-topics.sh --zookeeper $Z --create --partitions 1 --replication-factor 1 --topic "

alias create_compact="./kafka-topics.sh --zookeeper $Z --create --partitions 1 --replication-factor 1 --config cleanup.policy=compact --topic "

alias delete="./kafka-topics.sh --zookeeper $Z --delete --topic "

alias produce="./kafka-console-producer.sh --broker-list $K --topic "

alias consume="./kafka-console-consumer.sh --bootstrap-server $K --from-beginning --topic "

